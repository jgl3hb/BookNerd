
<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h1>Edit the Book!</h1>
  <form action="/books/<%= book._id %>?_method=PUT" method="POST">
    <label>
      Name: 
      <input 
        type="text"
        name="name" 
        value="<%= book.name %>" 
        autocomplete="off"
      >
    </label>
    <label>
      Read?
      <input 
        type="checkbox" 
        name="read" 
				<%= book.read ? "checked" : "" %> 
      >
    </label>
    <button type="submit">Edit the Book</button>
  </form>
</section>

